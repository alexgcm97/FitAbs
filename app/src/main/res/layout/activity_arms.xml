<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/armexercise"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imgArms1"
        android:layout_width="159dp"
        android:layout_height="111dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgArms2"
        android:layout_width="158dp"
        android:layout_height="114dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/armsName1" />

    <ImageView
        android:id="@+id/imgArms3"
        android:layout_width="158dp"
        android:layout_height="119dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/armsName2" />

    <TextView
        android:id="@+id/armsName1"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="56dp"
        android:text="@string/armsName1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgArms1" />

    <TextView
        android:id="@+id/armsName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:text="@string/armsName2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgArms2" />

    <TextView
        android:id="@+id/armsName3"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginStart="36dp"
        android:text="@string/armsName3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgArms3" />

    <TextView
        android:id="@+id/armsEx1"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="52dp"
        android:text="@string/armsEx1"
        app:layout_constraintStart_toEndOf="@+id/imgArms1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/armsEx2"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="@string/armsEx2"
        app:layout_constraintStart_toEndOf="@+id/imgArms2"
        app:layout_constraintTop_toBottomOf="@+id/armsEx1" />

    <TextView
        android:id="@+id/armsEx3"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:text="@string/armsEx3"
        app:layout_constraintStart_toEndOf="@+id/imgArms3"
        app:layout_constraintTop_toBottomOf="@+id/armsEx2" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="201dp"
        android:layout_height="41dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/armsEx"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>